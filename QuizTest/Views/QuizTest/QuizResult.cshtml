@{
    ViewData["Title"] = "Quiz Result";
    var score = TempData["Score"] ?? 0;
}

<!-- Bootstrap Modal -->
<div class="modal fade show" style="display: block;" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content text-center">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title w-100">Quiz Completed!</h5>
            </div>
            <div class="modal-body">
                <p class="lead">You scored: <strong>@score</strong></p>
                <a href="@Url.Action("Question", "QuizTest")" class="btn btn-primary">Try Again</a>
            </div>
        </div>
    </div>
</div>

<!-- Optional: dark backdrop -->
<div class="modal-backdrop fade show"></div>
